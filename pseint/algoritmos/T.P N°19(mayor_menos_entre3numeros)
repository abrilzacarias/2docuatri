Algoritmo mayor_menor_
	Escribir "digite un número";
	Leer a;
	Escribir "digite un número";
	Leer b;
	Escribir "digite un número";
	Leer c;
	Si a>b y a>c Entonces
		Escribir "el mayor es:",a;
	SiNo
		Si a<b y a<c Entonces
			Escribir "el menor es: ",a;
		Fin Si
    FinSi
